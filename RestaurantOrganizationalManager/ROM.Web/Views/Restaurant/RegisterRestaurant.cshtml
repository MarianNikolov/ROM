@model ROM.Web.ViewModels.Restaurant.RegisterRestaurantViewModel

<div class="jumbotron">
    <h1 class="page-title animated lightSpeedIn">Register restaurant</h1>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <legend class="text-right">Enter name and count of tables in your restaurant!</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <br>

            <div class="editor-label">
                @Html.LabelFor(model => model.CountOfTables)
            </div>
             <div class="editor-field">
                @Html.EditorFor(model => model.CountOfTables)
                @Html.ValidationMessageFor(model => model.CountOfTables)
            </div>
            <br>

            <p>
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </p>
        </fieldset>
    }
</div>